@model IEnumerable<PizzaModel>

<div class="py-5">
    <div class="container">

        <div class="text-center mb-5">
            <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Pizza">Cadastrar nova pizza!</a>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">
            @if (Model != null)
            {
                @if (Model.Any())
                {
                    @foreach (var pizza in Model)
                    {
                        <div class="card mx-3 my-3 p-2" style="width: 12rem">
                            @if (!string.IsNullOrEmpty(pizza.Capa))
                            {
                                <img src="/imagem/@pizza.Capa" class="card-img-top" style="width: 175px; height: 150px" />
                            }
                            else
                            {
                                <img src="..." class="card-img-top" />
                            }

                            <div class="card-body">
                                <h5 class="card-title">@pizza.Sabor</h5>
                            </div>

                            <div class="card-body">
                                <a class="btn btn-warning w-100" asp-action="Editar" asp-controller="Pizza" asp-route-id="@pizza.Id">Editar</a>
                                
                                <!-- Formulário para deletar a pizza -->
                                <form asp-action="DeletarPizza" asp-controller="Pizza" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@pizza.Id" />
                                    <button type="submit" class="btn btn-danger w-100">Remover</button>
                                </form>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>